<%= form_for selection_user_bookings_path do |f| %>
<%= collection_radio_buttons(:selection, :selected_desk, AvailableDesk.all, :id, :desk_name) do |b| %>
  <div class="selection">
     <%= b.label do %>
      <%= b.radio_button + b.text %>
     <% end %>
  </div>
<% end %>
<%= f.submit %>
<% end %>



  <h1> Available Desks </h1>
  <% AvailableDesk.all.each do |ad| %>
    <%= ad.desk_name %>
    <br />
  <% end %>

   <h1> Bookings </h1>
  <% Booking.all.each do |booking| %>
    <%= booking.user_name %>
    <%= booking.book_from %>
    <%= booking.book_to %>
    <%= booking.desk_id %>
    <br />
  <% end %>