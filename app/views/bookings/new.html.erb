<%= form_tag check_availability_user_bookings_path, multipart: true do %> 

  <div class='form-group'>
  <%= label_tag :book_from %><br />
  <%= date_select :book_from, class:  'form-control' %>
  </div>

  <div class='form-group'>
  <%= label_tag :book_to %><br />
  <%= date_select :book_to, class:  'form-control' %>
  </div>

  <%= submit_tag "Check Availability", class: "btn btn-default" %>
  <% end %>

<br />
