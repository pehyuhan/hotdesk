<br />

<div class='col-sm-6 col-sm-offset-3'>
	<h1><%= current_user.name %></h1>
	<h3><%= current_user.title %></h3>
	<h3><%= current_user.department %></h3>
	<br />
</div>

<div class='col-sm-6 col-sm-offset-3'>
	<div class="today-desk">
	Today's desk is <%= Booking.today_desk %>
</div>
</div>

<br />

<div class='col-sm-6 col-sm-offset-3'>
	<br />
	<h3>Desk Schedule</h3>
		<div class="desk-schedule">
			<% Booking.desk_schedule.each do |a, b, c| %>
			<%= "#{a} - #{b}" %><span class="tab-space"><%= "#{c}" %></span>
			&nbsp;
			<% if current_user %>
             <% end %><br />
			<% end %>
		</div>
</div>

<div class='col-sm-6 col-sm-offset-3'>
	<br />
	<hr />
    <button type="button" class="button">
      <%= link_to "My Bookings", authenticated_root_path %>
    </button>
    
    <button type="button" class="button">
    	<%= link_to "Book Desk", new_user_booking_path(current_user) %>
    </button>
</div>
